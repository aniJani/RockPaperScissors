<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RockPaperScissors.Pages.MainMenu"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*" VerticalOptions="Center">
        <Label Grid.Row="0" Text="Rock Paper Scissors" TextColor="White" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20" />

        <Button Grid.Row="1" Text="New Game"
                BackgroundColor="#00C5C8"
                TextColor="White"
                FontSize="16"
                Margin="10"
                CornerRadius="5"
                WidthRequest="200" HeightRequest="20"
                Clicked="OnNewGameClicked"/>

        <Button Grid.Row="2" Text="Statistics"
                BackgroundColor="#00C5C8"
                TextColor="White"
                FontSize="16"
                Margin="10"
                CornerRadius="5"
                WidthRequest="200" HeightRequest="20"
                Clicked="OnStatisticsClicked"/>

        <Button Grid.Row="3" Text="Exit"
                BackgroundColor="#00C5C8"
                TextColor="White"
                FontSize="16"
                Margin="10"
                CornerRadius="5"
                WidthRequest="200" HeightRequest="20"
                Clicked="OnExitClicked"/>
    </Grid>

</ContentPage>